{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "isolatedModules": false,
    "lib": ["dom", "esnext"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./server"
  ],
  "exclude": [
    "./src"
  ]
}